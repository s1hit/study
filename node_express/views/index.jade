extends layout

block content
  style.
    .form-signin {
      max-width: 330px;
      padding: 15px;
      margin: 0 auto;
    }

  .container
    form.form-signin(action="/login" method="post")
      .col-md-12.bordered
        h1.text-center Login
        .input-group-vertical
          .form-group
            input.form-control(type="text" placeholder="UserName")
            input.form-control(type="password" placeholder="Password")
          .form-group
            button.btn.btn-lg.btn-primary.btn-block(type="submit") Login
